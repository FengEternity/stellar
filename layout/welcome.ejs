<!DOCTYPE html>
<html lang="<%= page.lang %>">
<%- partial('_partial/head') %>
<body class="welcome-page">
  <div class="welcome-container">
    <div id="particles-js" class="particles-js"></div>
    <div class="welcome-content">
      <div class="avatar">
        <img src="<%= theme.logo.avatar %>" alt="<%= config.author %>">
      </div>
      <h1 class="title"><%= config.title %></h1>
      <p class="subtitle"><%= theme.logo.subtitle || '' %></p>
    </div>
    <div class="scroll-hint">
      <span>向下滑动进入博客</span>
      <div class="scroll-arrow">
        <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" width="24" height="24">
          <path fill="none" d="M0 0h24v24H0z"/>
          <path d="M12 13.172l4.95-4.95 1.414 1.414L12 16 5.636 9.636 7.05 8.222z" fill="currentColor"/>
        </svg>
      </div>
    </div>
  </div>

  <div class="blog-entrance-overlay" id="blog-entrance-overlay">
    <div class="loading-spinner">
      <div class="spinner"></div>
    </div>
  </div>

  <div class="scripts">
    <%- partial('_partial/scripts') %>
    <!-- 粒子背景 -->
    <script src="https://cdn.jsdelivr.net/npm/particles.js@2.0.0/particles.min.js"></script>
    <script>
      document.addEventListener('DOMContentLoaded', function() {
        // 初始化粒子背景
        if(typeof particlesJS !== 'undefined') {
          particlesJS('particles-js', {
            "particles": {
              "number": {
                "value": 80,
                "density": {
                  "enable": true,
                  "value_area": 800
                }
              },
              "color": {
                "value": "#1BCDFC"
              },
              "shape": {
                "type": "circle",
                "stroke": {
                  "width": 0,
                  "color": "#000000"
                },
                "polygon": {
                  "nb_sides": 5
                }
              },
              "opacity": {
                "value": 0.5,
                "random": false,
                "anim": {
                  "enable": false,
                  "speed": 1,
                  "opacity_min": 0.1,
                  "sync": false
                }
              },
              "size": {
                "value": 3,
                "random": true,
                "anim": {
                  "enable": false,
                  "speed": 40,
                  "size_min": 0.1,
                  "sync": false
                }
              },
              "line_linked": {
                "enable": true,
                "distance": 150,
                "color": "#1BCDFC",
                "opacity": 0.4,
                "width": 1
              },
              "move": {
                "enable": true,
                "speed": 2,
                "direction": "none",
                "random": false,
                "straight": false,
                "out_mode": "out",
                "bounce": false,
                "attract": {
                  "enable": false,
                  "rotateX": 600,
                  "rotateY": 1200
                }
              }
            },
            "interactivity": {
              "detect_on": "canvas",
              "events": {
                "onhover": {
                  "enable": true,
                  "mode": "grab"
                },
                "onclick": {
                  "enable": true,
                  "mode": "push"
                },
                "resize": true
              },
              "modes": {
                "grab": {
                  "distance": 140,
                  "line_linked": {
                    "opacity": 1
                  }
                },
                "bubble": {
                  "distance": 400,
                  "size": 40,
                  "duration": 2,
                  "opacity": 8,
                  "speed": 3
                },
                "repulse": {
                  "distance": 200,
                  "duration": 0.4
                },
                "push": {
                  "particles_nb": 4
                },
                "remove": {
                  "particles_nb": 2
                }
              }
            },
            "retina_detect": true
          });
        }

        // 滑动进入博客功能
        const welcomeContainer = document.querySelector('.welcome-container');
        const overlay = document.getElementById('blog-entrance-overlay');
        const scrollHint = document.querySelector('.scroll-hint');
        
        // 滚动事件处理
        let isAnimating = false;
        let hasEntered = false;
        
        function enterBlog() {
          if (isAnimating || hasEntered) return;
          isAnimating = true;
          
          welcomeContainer.style.transform = 'translateY(-100%)';
          overlay.style.opacity = '1';
          overlay.classList.add('active');
          
          // 减少等待时间，让蓝色遮罩显示更短
          setTimeout(function() {
            hasEntered = true;
            isAnimating = false;
            window.location.href = '/blog/';
          }, 400);
        }
        
        // 监听滚动事件
        window.addEventListener('wheel', function(e) {
          if (e.deltaY > 0 && !hasEntered) {
            enterBlog();
          }
        });
        
        // 监听触摸滑动事件
        let touchStartY;
        window.addEventListener('touchstart', function(e) {
          touchStartY = e.touches[0].clientY;
        });
        
        window.addEventListener('touchmove', function(e) {
          if (!touchStartY) return;
          
          const touchY = e.touches[0].clientY;
          const diff = touchStartY - touchY;
          
          if (diff > 50 && !hasEntered) { // 向上滑动超过50px
            enterBlog();
            touchStartY = null;
          }
        });
        
        window.addEventListener('touchend', function() {
          touchStartY = null;
        });
        
        // 点击滑动提示也可以进入
        scrollHint.addEventListener('click', function(e) {
          e.preventDefault();
          enterBlog();
        });
      });
    </script>
  </div>

  <style>
    body.welcome-page {
      overflow: hidden;
      margin: 0;
      padding: 0;
    }
    
    .welcome-container {
      position: fixed;
      top: 0;
      left: 0;
      width: 100%;
      height: 100vh;
      display: flex;
      flex-direction: column;
      align-items: center;
      justify-content: space-between;
      background-color: var(--site-bg);
      transition: transform 0.6s cubic-bezier(0.65, 0, 0.35, 1);
      z-index: 10;
    }
    
    .welcome-content {
      text-align: center;
      padding: 20px;
      position: relative;
      z-index: 2;
      margin-top: 15vh;
    }
    
    .welcome-content .avatar {
      width: 120px;
      height: 120px;
      border-radius: 50%;
      overflow: hidden;
      margin: 0 auto 20px;
      border: 4px solid var(--theme-color);
    }
    
    .welcome-content .avatar img {
      width: 100%;
      height: 100%;
      object-fit: cover;
    }
    
    .welcome-content .title {
      font-size: 2.5rem;
      margin-bottom: 10px;
      color: var(--text-p1);
    }
    
    .welcome-content .subtitle {
      font-size: 1.2rem;
      margin-bottom: 30px;
      color: var(--text-p2);
    }
    
    .scroll-hint {
      padding: 15px 0 25px;
      text-align: center;
      color: var(--text-p3);
      animation: bounce 2s infinite;
      cursor: pointer;
      z-index: 2;
    }
    
    .scroll-arrow {
      margin-top: 8px;
    }
    
    .blog-entrance-overlay {
      position: fixed;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
      background-color: var(--site-bg);
      opacity: 0;
      z-index: 5;
      transition: opacity 0.4s ease;
      display: flex;
      align-items: center;
      justify-content: center;
    }
    
    .loading-spinner {
      opacity: 0;
      transition: opacity 0.2s ease 0.1s;
    }
    
    .blog-entrance-overlay.active .loading-spinner {
      opacity: 1;
    }
    
    .spinner {
      width: 40px;
      height: 40px;
      border: 4px solid rgba(128, 128, 128, 0.3);
      border-radius: 50%;
      border-top-color: var(--text-p1);
      animation: spin 0.8s linear infinite;
    }
    
    @keyframes bounce {
      0%, 20%, 50%, 80%, 100% {
        transform: translateY(0);
      }
      40% {
        transform: translateY(-10px);
      }
      60% {
        transform: translateY(-5px);
      }
    }
    
    @keyframes spin {
      0% { transform: rotate(0deg); }
      100% { transform: rotate(360deg); }
    }
  </style>
</body>
</html> 