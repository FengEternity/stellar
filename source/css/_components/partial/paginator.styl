.paginator-wrap
  margin: 1rem
  display: flex
  justify-content: space-between
  align-items: center
  font-size: 1rem
  font-weight: 700
  background: transparent !important
  border-radius: $border-card
  overflow: hidden
  box-shadow: none
  color: var(--text-p3)
  .page-number
    padding: 4px 8px
    border-radius: 8px
    margin: 2px
    background: transparent
  a.page-number
    color: var(--text-p3)
    &:hover
      color: var(--text-p1)
      background: rgba(128, 128, 128, 0.1)
  .extend
    text-align: center
    background-size: contain
    width: 1rem
    height: 1rem
    background-origin: content-box
    background-clip: content-box
    &.next
      border-left: none
      background-image: url(hexo-config('style.paginator.next'))
    &.prev
      border-right: none
      background-image: url(hexo-config('style.paginator.prev'))
  .current
    font-family: $ff-code
    background: rgba(128, 128, 128, 0.1)
  .extend
    padding: 1rem
    line-height: 0
    filter: grayscale(100%)
    img
      height: 1rem
    &.disable
      pointer-events: none
  span.extend
    opacity: 0.25
  a.extend:hover
    filter: unset
